- content_for :title do
  home

- content_for :body_class do
  page-start

= render 'frontend/shared/promoted'

.container-fluid
  .row.browse-button-bar
    %a.btn.btn-primary.btn-lg{role: 'button', href: tags_path}
      %span.icon.icon-tags
      Browse by tag

    %a.btn.btn-primary.btn-lg{role: 'button', href: browse_start_path}
      %span.icon.icon-th
      Browse by category

    %a.btn.btn-primary.btn-lg{role: 'button', href: recent_path}
      %span.icon.icon-calendar
      Recent Videos


  %h1 News

  - @news.each do |news|
    %article.news-item
      %h2
        %span.date= news.date_formatted
        = news.title
      != news.body
