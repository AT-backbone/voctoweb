- content_for :head
    = render 'frontend/shared/folder-feeds'

.events-header
  %img{src: @conference.logo_url, alt: 'conference logo'}

  %h1= @conference.acronym.gsub(/[\-_]/,' ')
  - if @conference.title and not item[:conference].acronym == @conference.title
    %h2= h @conference.title

  #sorting.btn-group.btn-group-sm.btn-group-justified
    - %w{name duration date}.each do |sorting|
      - if @sorting == sorting
        %a.btn.btn-primary.active{ href: "/browse/#{@conference.slug}/#{sorting}/" }= sorting
      - else
        %a.btn.btn-primary{ href: "/browse/#{@conference.slug}/#{sorting}/" }= sorting

- if @events.present?
  .event-previews
    -# Build event overview
    - @events.each do |event|
      - recordings = event.recordings.downloaded
      %a.event-preview{href: h(event.url)}
        %img.video-thumbnail{src: h(event.thumb_url), alt: h(event.title)}
        .caption
          %ul.metadata
            %li
              %span.fa.fa-clock-o
              = recording_length(recordings)
            %li
              %span.fa.fa-calendar-o
              = date(event)
            %li.persons
              %span.fa{class: event.persons_icon}
              = event.persons_text
          %h3= h event.title

