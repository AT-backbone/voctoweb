%h3
  %a{href: event_url(slug: event.slug)}
    = truncate(event.title, length: 90, separator: ' ', omission: 'â€¦')
%h4{title: event.subtitle}
  = truncate(event.subtitle, length: 60, separator: ' ', omission: 'â€¦')

%ul.metadata
  %li.duration
    %span.fa.fa-clock-o
    = duration_in_minutes(event.duration)
  %li.date
    %span.fa.fa-calendar-o
    = event.display_date
  %li.persons
    = render partial: 'frontend/shared/event_persons', locals: { persons: event.persons }

.duration-container
  .duration
    %span.fa.fa-clock-o
    = duration_in_minutes(event.duration)
